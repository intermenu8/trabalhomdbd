CREATE TABLE Prato (
    id INT PRIMARY KEY,
    nome VARCHAR,
    preço DOUBLE
);

CREATE TABLE Pedido (
    id INT PRIMARY KEY,
    valor DOUBLE,
    observação VARCHAR
);

CREATE TABLE Gerente (
    senha INT PRIMARY KEY
);

CREATE TABLE Cliente (
    número INT PRIMARY KEY,
    nome VARCHAR,
    gasto DOUBLE
);

CREATE TABLE Categoria (
    id INT PRIMARY KEY,
    nome VARCHAR
);

CREATE TABLE Cozinheiro (
    id INT PRIMARY KEY,
    nome VARCHAR
);

CREATE TABLE Ingrediente (
    id INT PRIMARY KEY,
    nome VARCHAR
);

CREATE TABLE DEFINE (
    FK_Gerente_senha INT,
    FK_Prato_id INT
);

CREATE TABLE DEFINE (
    FK_Gerente_senha INT,
    FK_Categoria_id INT
);

CREATE TABLE CUIDA/PREPARA (
    FK_Cozinheiro_id INT,
    FK_Pedido_id INT
);

CREATE TABLE TEM (
    FK_Pedido_id INT,
    FK_Prato_id INT
);

CREATE TABLE POSSUI (
    FK_Prato_id INT,
    FK_Ingrediente_id INT
);
 
ALTER TABLE Cliente ADD CONSTRAINT FK_Cliente_1
    FOREIGN KEY (FK_Pedido_id)
    REFERENCES Pedido (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE Categoria ADD CONSTRAINT FK_Categoria_1
    FOREIGN KEY (FK_Prato_id)
    REFERENCES Prato (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE DEFINE ADD CONSTRAINT FK_DEFINE_0
    FOREIGN KEY (FK_Gerente_senha)
    REFERENCES Gerente (senha)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE DEFINE ADD CONSTRAINT FK_DEFINE_1
    FOREIGN KEY (FK_Prato_id)
    REFERENCES Prato (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE DEFINE ADD CONSTRAINT FK_DEFINE_0
    FOREIGN KEY (FK_Gerente_senha)
    REFERENCES Gerente (senha)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE DEFINE ADD CONSTRAINT FK_DEFINE_1
    FOREIGN KEY (FK_Categoria_id)
    REFERENCES Categoria (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE CUIDA/PREPARA ADD CONSTRAINT FK_CUIDA/PREPARA_0
    FOREIGN KEY (FK_Cozinheiro_id)
    REFERENCES Cozinheiro (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE CUIDA/PREPARA ADD CONSTRAINT FK_CUIDA/PREPARA_1
    FOREIGN KEY (FK_Pedido_id)
    REFERENCES Pedido (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE TEM ADD CONSTRAINT FK_TEM_0
    FOREIGN KEY (FK_Pedido_id)
    REFERENCES Pedido (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE TEM ADD CONSTRAINT FK_TEM_1
    FOREIGN KEY (FK_Prato_id)
    REFERENCES Prato (id)
    ON DELETE SET NULL ON UPDATE CASCADE;
 
ALTER TABLE POSSUI ADD CONSTRAINT FK_POSSUI_0
    FOREIGN KEY (FK_Prato_id)
    REFERENCES Prato (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
 
ALTER TABLE POSSUI ADD CONSTRAINT FK_POSSUI_1
    FOREIGN KEY (FK_Ingrediente_id)
    REFERENCES Ingrediente (id)
    ON DELETE RESTRICT ON UPDATE RESTRICT;
